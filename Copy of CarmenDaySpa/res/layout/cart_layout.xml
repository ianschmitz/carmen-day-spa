                    android:id="@+id/tvItem2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Item Two"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnItem2"
                    android:layout_width="wrap_content"
